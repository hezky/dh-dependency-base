{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "source": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "none", "ignoreRestSiblings": false }
    ],
    "prettier/prettier": "error"
  }
}
